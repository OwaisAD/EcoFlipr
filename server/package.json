{
  "name": "server",
  "version": "1.0.0",
  "description": "backend built with typescript with following npm dependencies:",
  "main": "index.ts",
  "scripts": {
    "start": "NODE_ENV=production ts-node index.ts",
    "windows_start": "set NODE_ENV=production&&ts-node index.ts",
    "dev": "NODE_ENV=development nodemon index.ts",
    "windows_dev": "set NODE_ENV=development&&nodemon index.ts",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest --verbose",
    "windows_test": "set NODE_ENV=test&&jest --verbose",
    "json-server": "json-server --watch Category.json User.json SaleOffer.json Comment.json --port 3008"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "@types/express-jwt": "^7.4.2",
    "@types/mongoose": "^5.11.97",
    "apollo-server-express": "^3.12.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^8.4.1",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.4.0",
    "mongoose": "^6.10.4",
    "mongoose-unique-validator": "^3.1.0",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.5",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mongoose-unique-validator": "^1.0.7",
    "@types/node": "^18.14.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.14",
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/tests/.*\\.(test|spec)?\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
